# LilyGo T-TWR Plus board configuration

config BOARD
	default "ttwrplus"
	depends on BOARD_TTWRPLUS

config ENTROPY_GENERATOR
	default y

config HEAP_MEM_POOL_SIZE
	default 98304 if WIFI
	default 40960 if BT
	default 4096

choice BT_HCI_BUS_TYPE
	default BT_ESP32 if BT
endchoice
